{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": ["error", { "singleQuote": true, "parser": "flow" }],
    "camelcase": "off",
    "no-plusplus": "off",
    "class-methods-use-this": "off",
    "consistent-return": "off",
    "no-await-in-loop": "off"
  }
}
